<Window x:Class="ExportDatabase.WPF.AddItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:ExportDatabase.WPF"
        mc:Ignorable="d" SizeToContent="WidthAndHeight" 
        DataContext="{x:Static local:WPFDbContext.Instance}" 
        local:BaseAttachedProperty.AddItemWindowClosingProperty="True">
    <!--Title="{Binding AddItemType, Converter={DynamicResource addItemType2TitleConverter}}"-->
    <Window.Resources>
        <local:AddItemTypeToTitleConverter x:Key="addItemType2TitleConverter"/>
        <Style x:Key="btnMoveParameter" TargetType="Button">
            <Setter Property="BorderBrush" Value="BlanchedAlmond"/>
            <Setter Property="Background" Value="Azure"/>
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="20"/>
        </Style>
    </Window.Resources>
    <Window.Title>
        <Binding Path="AddItemType" Converter="{StaticResource  addItemType2TitleConverter}"/>
    </Window.Title>
    <StackPanel Orientation="Vertical" Margin="10">
        <StackPanel Orientation="Horizontal">
            <Label Margin="15 0 0 0" Content="Name:"/>
            <TextBox Margin="15 0 0 0" Width="100" VerticalAlignment="Center" TextBlock.TextAlignment="Right" Text="{Binding ItemName}"/>
            <Button local:BaseAttachedProperty.AddItemOKClickedProperty="true" 
                Margin="15 0 15 0" Content="OK" Style="{StaticResource btnMoveParameter}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Visibility="{Binding ShowDescription}">
            <Label Margin="15 0 0 0" Content="Description:"/>
            <TextBox Margin="2 0 0 0" Width="145" Height="50" VerticalAlignment="Center" TextBlock.TextAlignment="Right" Text="{Binding Description}"/>
        </StackPanel>
    </StackPanel>
</Window>
